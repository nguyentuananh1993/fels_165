<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.multipart.maxSize" value="1000000" />
	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/user" extends="default-web">
		<action name="findByUserId*" class="springUserAction" method="findByUserId">
			<param name="user.user_id">{1}</param>
			<result name="success">User.ShowProfile</result>
			<result name="input">User.Info</result>
			<result name="error">User.Info</result>
		</action>

		<action name="findByUsername*" class="springUserAction" method="findByUsername">
			<param name="user.username">{1}</param>
			<result name="success">User.Info</result>
			<result name="error">User.Info</result>
		</action>

		<action name="signUp" class="springUserAction" method="signUp">
			<result name="input">User.SignUp</result>
			<result name="success">User.Info</result>
			<result name="error">User.SignUp</result>
		</action>

		<action name="logIn" class="springUserAction" method="logIn">
			<result name="success">User.Info</result>
			<result name="error">User.LogIn</result>
		</action>

		<action name="editProfile" class="springUserAction" method="editProfile">
			<result name="input">User.Profile</result>
			<result name="success">User.Info</result>
			<result name="error">User.Profile</result>
		</action>
		
		<action name="changePassword" class="springUserAction" method="changePassword">
			<result name="input">User.ChangePassword</result>
			<result name="success">User.Info</result>
			<result name="error">User.ChangePassword</result>
		</action>
		
		<action name="showProfile" class="springUserAction" method="showProfile">
			<result name="success">User.ShowProfile</result>
		</action>
		
		<action name="showCurrentProfile" class="springUserAction" method="showCurrentProfile">
			<result name="success">User.ShowProfile</result>
		</action>
		
		<action name="createRelationship" class="springUserAction" method="createRelationship">
			<result name="success" type="redirectAction">
				<param name="actionName">showProfile</param>
				
			</result>
		</action>

		<action name="deleteRelationship" class="springUserAction" method="deleteRelationship">
			<result name="success" type="redirectAction">
				<param name="actionName">showProfile</param>
			</result>
		</action>
		
		<action name="signOut" class="springUserAction" method="signOut">
			<result name="success">HomeScreen</result>
		</action>

	</package>
</struts>