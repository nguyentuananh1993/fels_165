<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="Admin" namespace="/admin" extends="default-web">
		<!-- ================== UTIL MODULE ================== -->
		<action name="logIn" class="springAdminAction" method="adminLogIn">
			<result name="input">User.LogIn</result>
			<result name="success">AdminHomePage</result>
			<result name="error">AdminLogIn</result>
		</action>

		<action name="" class="springAdminAction" method="adminHomePage">
			<result name="success">AdminHomePage</result>
			<result name="error">AdminLogIn</result>
		</action>
		<!-- ================== USER MODULE ================== -->
		<action name="user" class="springAdminAction" method="adminUserList">
			<result name="success">AdminUser</result>
			<result name="error">AdminLogIn</result>
		</action>

		<action name="userDelete*" class="springAdminAction" method="adminDeleteUser">
			<param name="user.user_id">{1}</param>
			<result name="success">AdminUser</result>
			<result name="error">AdminLogIn</result>
			<result name="finish" type="redirect">
				<param name="location">/admin/user</param>
			</result>
		</action>

		<action name="userAdd" class="springAdminAction" method="adminAddUser">
			<result name="success">AdminSignUp</result>
			<result name="error">AdminUser</result>
		</action>

		<action name="actionUserAdd" class="springAdminAction" method="actionAdminAddUser">
			<result name="error">AdminUser</result>
			<result name="success" type="redirect">
				<param name="location">/admin/user</param>
			</result>
		</action>
		<action name="userEdit*" class="springAdminAction" method="adminUserEdit">
			<param name="user.user_id">{1}</param>
			<result name="error" type="redirect">
				<param name="location">/admin/user</param>
			</result>
			<result name="success">AdminUserEdit</result>
		</action>

		<action name="actionUserEdit" class="springAdminAction" method="actionAdminEditUser">
			<result name="error">AdminUser</result>
			<result name="success" type="redirect">
				<param name="location">/admin/user</param>
			</result>
		</action>
		<action name="userDeleteAll" class="springAdminAction" method="adminDeleteAll">
			<result name="success">AdminUser</result>
			<result name="error">AdminLogIn</result>
			<result name="finish" type="redirect">
				<param name="location">/admin/user</param>
			</result>
		</action>
		<!-- ================== WORD MODULE ================== -->
		<action name="word" class="springWordAction" method="adminWordList">
			<result name="success">AdminWordList</result>
			<result name="error">AdminLogIn</result>
		</action>

		<action name="wordEdit*" class="springWordAction" method="adminWordEdit">
			<param name="word.word_id">{1}</param>
			<result name="error" type="redirect">
				<param name="location">/admin/word</param>
			</result>
			<result name="success">AdminWordEdit</result>
		</action>

		<action name="actionWordEdit" class="springWordAction" method="actionAdminWordEdit">
			<result name="error">AdminWordList</result>
			<result name="success" type="redirect">
				<param name="location">/admin/word</param>
			</result>
		</action>

		<action name="wordDelete*" class="springWordAction" method="adminWordDelete">
			<param name="word.word_id">{1}</param>
			<result name="success">AdminWordList</result>
			<result name="error">AdminLogIn</result>
			<result name="finish" type="redirect">
				<param name="location">/admin/word</param>
			</result>
		</action>

		<action name="wordAdd" class="springWordAction" method="adminWordAdd">
			<result name="success">AdminWordAdd</result>
			<result name="error">AdminWordList</result>
		</action>

		<action name="actionWordAdd" class="springWordAction" method="actionAdminWordAdd">
			<result name="error">AdminWordList</result>
			<result name="success" type="redirect">
				<param name="location">/admin/word</param>
			</result>
		</action>

		<action name="wordDeleteAll" class="springWordAction" method="adminUserDeleteAll">
			<result name="success">AdminWordList</result>
			<result name="error">AdminLogIn</result>
			<result name="finish" type="redirect">
				<param name="location">/admin/word</param>
			</result>
		</action>
		<!-- ================== CATEGORY MODULE ================== -->
		<action name="category" class="springCategoryAction" method="adminCategoryList">
			<result name="success">AdminCategoryList</result>
			<result name="error">AdminLogIn</result>
		</action>

		<action name="categoryEdit*" class="springCategoryAction"
			method="adminCategoryEdit">
			<param name="category.category_id">{1}</param>
			<result name="error" type="redirect">
				<param name="location">/admin/category</param>
			</result>
			<result name="success">AdminCategoryEdit</result>
		</action>

		<action name="actionCategoryEdit" class="springCategoryAction"
			method="actionAdminCategoryEdit">
			<result name="error">AdminCategoryList</result>
			<result name="success" type="redirect">
				<param name="location">/admin/category</param>
			</result>
		</action>

		<action name="categoryDelete*" class="springCategoryAction"
			method="adminCategoryDelete">
			<param name="category.category_id">{1}</param>
			<result name="success">AdminCategoryList</result>
			<result name="error">AdminLogIn</result>
			<result name="finish" type="redirect">
				<param name="location">/admin/category</param>
			</result>
		</action>

		<action name="categoryAdd" class="springCategoryAction" method="adminCategoryAdd">
			<result name="success">AdminCategoryAdd</result>
			<result name="error">AdminCategoryList</result>
		</action>

		<action name="actionCategoryAdd" class="springCategoryAction"
			method="actionAdminCategoryAdd">
			<result name="error">AdminCategoryList</result>
			<result name="success" type="redirect">
				<param name="location">/admin/category</param>
			</result>
		</action>

		<action name="categoryDeleteAll" class="springCategoryAction"
			method="adminCategoryDeleteAll">
			<result name="success">AdminCategoryList</result>
			<result name="error">AdminLogIn</result>
			<result name="finish" type="redirect">
				<param name="location">/admin/category</param>
			</result>
		</action>
	</package>
</struts>